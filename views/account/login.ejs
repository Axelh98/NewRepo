
  <!-- Flash message -->
  <h1>Login</h1>
  <% if (typeof message !== 'undefined') { %>
    <div class="flash-message">
      <p><%= message %></p>
    </div>
  <% } %>

  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <!-- Login Form -->
  <form id="loginForm" action="/account/login" method="post">
    <div class="body-login">
      <div class="form-group">
        <label for="account_email">Email Address:</label>
        <input type="email" id="email" name="account_email" required />
      </div>

      <div class="form-group">
        <label for="account_password">Password:</label>
        <input type="password" id="password" name="account_password" required />
      </div>

      <div class="form-group">
        <p>Passwords must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special character</p>
      </div>

      <div class="form-group">
        <button type="submit">Login</button>
      </div>
    </div>
  </form>
  <div class="sign-up">
    <p>Don't have an account? <a href="/account/register">Register here</a>.</p>
  </div>
