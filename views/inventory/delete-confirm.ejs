<h1>Delete <%= vehicle.inv_make %> <%= vehicle.inv_model %></h1>
<p>Confirm Deletion - The delete is permanent and cannot be undone.</p>

<form action="/inv/delete" method="POST">
  <label for="inv_make">Make</label>
  <input type="text" name="inv_make" value="<%= vehicle.inv_make %>" readonly>

  <label for="inv_model">Model</label>
  <input type="text" name="inv_model" value="<%= vehicle.inv_model %>" readonly>

  <label for="inv_year">Year</label>
  <input type="text" name="inv_year" value="<%= vehicle.inv_year %>" readonly>

  <label for="inv_price">Price</label>
  <input type="text" name="inv_price" value="<%= vehicle.inv_price %>" readonly>

  <!-- Campo oculto para inv_id -->
  <input type="hidden" name="inv_id" value="<%= vehicle.inv_id %>">
  
  <button type="submit">Confirm Deletion</button>
</form>
