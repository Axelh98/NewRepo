<h1><%= title %></h1>

<% if (errors && errors.length > 0) { %>
  <div class="error-messages">
    <ul>
      <% errors.forEach(function(error) { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<% if (messages.success) { %>
  <div class="alert alert-success"><%= messages.success %></div>
<% } %>
<% if (messages.error) { %>
  <div class="alert alert-danger"><%= messages.error %></div>
<% } %>

<form action="/inv/update" method="post">
  <!-- Campos del formulario -->
  <div class="form-group new-vehicule">
    <label for="classification_id">Classification:</label>
    <%- classificationSelect %>
  </div>

  <div class="form-group new-vehicule">
    <label for="inv_make">Make:</label>
    <input type="text" id="inv_make" name="inv_make" value="<%= inv_make %>" required />
  </div>

  <div class="form-group new-vehicule">
    <label for="inv_model">Model:</label>
    <input type="text" id="inv_model" name="inv_model" value="<%= inv_model %>" required />
  </div>

  <div class="form-group new-vehicule">
    <label for="inv_description">Description:</label>
    <textarea id="inv_description" name="inv_description" rows="4" cols="50" required><%= inv_description %></textarea>
  </div>

  <div class="form-group new-vehicule">
    <label for="inv_image">Image Path:</label>
    <input type="url" id="inv_image" name="inv_image" value="<%= inv_image %>" />
  </div>

  <div class="form-group new-vehicule">
    <label for="inv_thumbnail">Thumbnail Path:</label>
    <input type="url" id="inv_thumbnail" name="inv_thumbnail" value="<%= inv_thumbnail %>" />
  </div>

  <div class="form-group new-vehicule">
    <label for="inv_price">Price:</label>
    <input type="number" id="inv_price" name="inv_price" value="<%= inv_price %>" required />
  </div>

  <div class="form-group new-vehicule">
    <label for="inv_year">Year:</label>
    <input type="text" id="inv_year" name="inv_year" value="<%= inv_year %>" required />
  </div>

  <div class="form-group new-vehicule">
    <label for="inv_miles">Miles:</label>
    <input type="number" id="inv_miles" name="inv_miles" value="<%= inv_miles %>" required />
  </div>

  <div class="form-group new-vehicule">
    <label for="inv_color">Color:</label>
    <input type="text" id="inv_color" name="inv_color" value="<%= inv_color %>" required />
  </div>

  <!-- BotÃ³n de submit -->
  <div class="form-group" id="btn-vehicule">
    <button type="submit">Update Vehicle</button>
  </div>

  <!-- Campo oculto para el inv_id -->
  <input type="hidden" name="inv_id"
    <% if (locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %> >
</form>
