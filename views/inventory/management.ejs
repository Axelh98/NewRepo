<% if (title) { %>
    <h1><%= title %></h1>
  <% } else { res.redirect('/') } %>
  
  <% if (messages.success && messages.success.length) { %>
    <div class="alert alert-success">
      <%= messages.success %>
    </div>
  <% } %>
  
  <% if (messages.error && messages.error.length) { %>
    <div class="alert alert-danger">
      <%= messages.error %>
    </div>
  <% } %>

  <div class="management-links">
    <a href="/inv/new-classification">Add a new Classification</a>
    <a href="/inv/new-inventory">Add a New Vehicule</a>
    <a href="/inv/dashboard">Inventory Dashboard</a>
  </div>

  <h2>Manage Inventory</h2>
  <p>Select a Classification</p>
  <%- classificationSelect %>
  
<table id="inventoryDisplay"></table>

<noscript>JavaScript must be enabled to use this page.</noscript>

<script src="/js/inventory.js"></script>